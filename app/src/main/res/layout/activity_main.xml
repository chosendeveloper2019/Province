<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_province"
        android:layout_width="0dp"
        android:layout_height="245dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/phrae_img" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="เลือกจังหวัดที่คุณต้องการ"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_province" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="306dp"
        android:layout_height="283dp"
        android:layout_marginTop="32dp"
        android:text="ยินดีต้อนรับนะจ๊ะ"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <Button
        android:id="@+id/btn_phrae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_phrae"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_content" />

    <Button
        android:id="@+id/btn_cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/btn_chaingmai"
        app:layout_constraintBottom_toBottomOf="@+id/btn_phrae"
        app:layout_constraintStart_toEndOf="@+id/btn_phrae" />

    <Button
        android:id="@+id/btn_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_chaingrai"
        app:layout_constraintBottom_toBottomOf="@+id/btn_phrae"
        app:layout_constraintEnd_toEndOf="@+id/tv_content" />
</androidx.constraintlayout.widget.ConstraintLayout>